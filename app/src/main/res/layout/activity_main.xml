<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.testapp.MainActivity"
    android:background="#cacbcb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:padding="5dp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:listItem="@layout/list_list"></android.support.v7.widget.RecyclerView>
        <Button
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#e6e8f5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Retrieve Post"
            android:id="@+id/btn_retrieve"
            android:background="@drawable/round_button"/>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
